@import 'jeet'
@import 'rupture'

fullWidth = 840px
primaryColor = #c7e9eb
darkColor = #333
lightColor = #ddd


div, header, nav, menu,
form, input, button, h1,
h2, h3, h4, h5, h6, p,
ul, ol, li, iframe, label,
fieldset
  box-sizing: border-box

body
  padding: 0
  margin: 0
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background: primaryColor
  font-family: Arial, sans-serif
  font-size: 16px

#bulb-response:before
  content: "Status: "

#user-count:before
  content: "User Count: "

.main-header
  cf(span(1))
  background: darkColor
  color: lightColor
  padding: 0 2rem

  h1
    margin: 0
    padding: 0

  span
    float: right
    padding: 0 1rem

.main-content
  center(fullWidth)
  position: relative

button,
canvas
  border: 1px solid #333

button
  background: lighten(darkColor, 80%)
  border-radius: 5px
  cursor: pointer

  &:hover
    background: lighten(darkColor, 75%)

  &[type="submit"]
    clear: both
    width: 100%

canvas
  center(100%)
  border-color: #666

label, button
  display: block

label
  col(1/3, gutter: 2, cycle: 3)

input
  span(1)
  padding: 0.5rem 0

input,
button
  margin-bottom: 15px

button
  padding: 10px

.correct,
.error {
  border: 2px solid #00cd00
}

.error
  border-color: #ff0033

a
  color: #00B7FF

.hide
  display: none !important

iframe
  height: 32rem
  width: 52.5rem

.tabs
  cf(span(1))
  background: lighten(darkColor, 50%)
  margin: 0
  padding: 0
  list-style-type: none

  li
    col(1/3, gutter: 0)
    cursor: pointer
    padding: 1rem
    text-align: center;
    &:last-of-type
      cf(col(1/3, gutter: 0))

    &.active,
    &:hover
      background: lighten(darkColor, 25%)
      color: darken(lightColor, 10%);

.tab-content
  center(fullWidth)
  background: lighten(darkColor, 65%)
  border: 0.2rem solid #333
  margin-top: 2rem
  margin-left: 0
  padding: 1rem 2rem
  position: absolute
  transition: margin-left 1s

  &.create
    margin-left: 4.5rem;

  &.code
    margin-left: -1rem;

  &.parked
    margin-left: -200rem

.chat
  bottom: -400px
  position: fixed
  transition: bottom 0.5s
  width: 200px

  &.active
    bottom: 0

  header
    background: #666
    color: #eee
    cursor: pointer
    padding: 4px

  .display
    background: primaryColor
    height: 300px
    border: 1px solid #000
    overflow-y: auto

    .messages
      padding: 0
      margin: 0
      list-style-type: none

      li
        padding: 4px 2px
        &:nth-child(2n+1)
          background-color: lighten(primaryColor, 30%)

  input
    margin-bottom: 5px

  button
    span()